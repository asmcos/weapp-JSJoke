/**index.wxss**/
@import "../../weui-wxss/style/weui.wxss"
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.weui-cells_comment {
  position:relative;
  display:-webkit-box;
  border-top:1rpx solid #D5D5D6;
}
.weui-cells_comment button{
  float: left;
  width: 20%;
  box-sizing: border-box;
  margin-top:0rpx;
}