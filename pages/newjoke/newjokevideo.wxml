<view class="page">
<form bindsubmit="bindFormSubmit">
    <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea class="weui-textarea" placeholder="写一个视频笑话，支持10M以内视频" style="height: 6.6em" name="content"  maxlength="-1" />
                    
                </view>
            </view>
     </view>  


<view class="page__bd">
        <view class="weui-cells">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <view class="weui-uploader">
                        
                        <view class="weui-uploader__bd">
                            <view class="weui-uploader__files" id="uploaderFiles">
                               
                                    <image wx:if="{{videourl}}" class="weui-uploader__img" src="/images/video.png" mode="aspectFill" />
                                
                            </view>
                            <view class="weui-uploader__input-box">
                                <view class="weui-uploader__input" bindtap="chooseVideo"></view>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>

     <button class="weui-btn" type="primary" form-type="submit">确定</button>
  </form>
</view> <!--page-->